{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">{{ category.name }}</span> Courses
        </h4>
        <div class="row">
            {% for course in courses %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bx bx-book-open text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ course.title }}</h5>
                            <p class="card-text text-muted">{{ course.description|slice(0, 150) }}...</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-label-primary">{{ course.category.name }}</span>
                                    <span class="text-muted">{{ course.duration }} hours</span>
                                </div>
                                <div class="d-flex align-items-center mt-3" style="width: 100%;">
                                    <a href="{{ path('course_show', {'id': course.id}) }}" class="btn btn-primary d-flex align-items-center justify-content-center me-2 flex-grow-1">
                                        <i class="bx bx-show me-1"></i>View Course
                                    </a>
                                    <div class="ms-auto d-flex gap-1">
                                        {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_INSTRUCTOR') and app.user and app.user.getUserIdentifier() == course.instructor.getUserIdentifier()) %}
                                            <a href="{{ path('course_edit', {'id': course.id}) }}"
                                               class="btn btn-sm d-flex align-items-center justify-content-center p-0"
                                               style="width:32px; height:32px; background-color:#2563eb; border-color:#2563eb;" title="Edit Course">
                                                <i class="bx bx-edit" style="color:#fff;"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm d-flex align-items-center justify-content-center p-0" style="width:32px; height:32px; background-color:#c83729; border-color:#c83729;" title="Delete Course"
                                                    onclick="confirmDelete({{ course.id }})">
                                                <i class="bx bx-trash" style="color:#fff;"></i>
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">No courses found in this category.</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
function confirmDelete(courseId) {
    if (confirm('Are you sure you want to delete this course? This action cannot be undone.')) {
        fetch(`/course/${courseId}/delete`, {
            method: 'DELETE',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Error deleting course');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting course');
        });
    }
}
</script>
{% endblock %} 