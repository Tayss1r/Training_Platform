{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_courses') }}">Manage Courses</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">{{ title }}</h5>
                        <a href="{{ path('admin_courses') }}" class="btn btn-outline-secondary">
                            <i class="bx bx-arrow-back me-1"></i>Back to Courses
                        </a>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="col-md-6">
                            <label class="form-label" for="{{ form.title.vars.id }}">Title</label>
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="{{ form.duration.vars.id }}">Duration (hours)</label>
                            {{ form_widget(form.duration, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                            {{ form_errors(form.duration) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Insert Course image</label>
                            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.photo) }}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="{{ form.category.vars.id }}">Category</label>
                            {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.category) }}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="{{ form.description.vars.id }}">Description</label>
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="col-12 d-flex justify-content-end gap-2">
                            <a href="{{ path('admin_courses') }}" class="btn btn-label-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-save me-1"></i>Save Course
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Optional: Add JS for validation or date picking if needed
        });
    </script>
{% endblock %}
