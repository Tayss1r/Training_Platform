            // Form validation function
            function validateForm(form) {
                let isValid = true;
                let errorMessages = [];

                // Check required fields
                const requiredFields = form.querySelectorAll('[required]');
                requiredFields.forEach(field => {
                    const label = field.previousElementSibling ? field.previousElementSibling.textContent : field.name;

                    if (!field.value) {
                        isValid = false;
                        field.classList.add('is-invalid');
                        errorMessages.push(`${label} is required`);

                        // Add error message if it doesn't exist
                        let errorDiv = field.nextElementSibling;
                        if (!errorDiv || !errorDiv.classList.contains('invalid-feedback')) {
                            errorDiv = document.createElement('div');
                            errorDiv.className = 'invalid-feedback';
                            errorDiv.textContent = 'This field is required';
                            field.parentNode.insertBefore(errorDiv, field.nextSibling);
                        }
                    } else {
                        field.classList.remove('is-invalid');

                        // Remove error message if it exists
                        const errorDiv = field.nextElementSibling;
                        if (errorDiv && errorDiv.classList.contains('invalid-feedback')) {
                            errorDiv.remove();
                        }
                    }
                });

                // Validate start date is not after end date
                const startDateField = form.querySelector('input[name="startDate"]');
                const endDateField = form.querySelector('input[name="endDate"]');

                if (startDateField && endDateField && startDateField.value && endDateField.value) {
                    const startDate = new Date(startDateField.value);
                    const endDate = new Date(endDateField.value);

                    if (startDate > endDate) {
                        isValid = false;

                        // Mark fields as invalid
                        startDateField.classList.add('is-invalid');
                        endDateField.classList.add('is-invalid');

                        // Add error message for start date
                        let startErrorDiv = startDateField.nextElementSibling;
                        if (!startErrorDiv || !startErrorDiv.classList.contains('invalid-feedback')) {
                            startErrorDiv = document.createElement('div');
                            startErrorDiv.className = 'invalid-feedback';
                            startDateField.parentNode.insertBefore(startErrorDiv, startDateField.nextSibling);
                        }
                        startErrorDiv.textContent = 'Start date cannot be after end date';

                        // Add error message for end date
                        let endErrorDiv = endDateField.nextElementSibling;
                        if (!endErrorDiv || !endErrorDiv.classList.contains('invalid-feedback')) {
                            endErrorDiv = document.createElement('div');
                            endErrorDiv.className = 'invalid-feedback';
                            endDateField.parentNode.insertBefore(endErrorDiv, endDateField.nextSibling);
                        }
